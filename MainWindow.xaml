<Window x:Class="SCVRPatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCVRPatcher"
        mc:Ignorable="d"
        Title="Star Citizen VR Patcher" Height="450" Width="893">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="815*"/>
        </Grid.ColumnDefinitions>
        <Image Source="pack://application:,,,/banner.png" Margin="0,10,398,246" HorizontalAlignment="Right" Width="417" Grid.Column="3" />
        <ListView x:Name="HMDSelector" Grid.Column="3" d:ItemsSource="{d:Binding availableConfigs}" Margin="422,0,0,0" ItemStringFormat="">
            <!--<ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Key}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="VREnableButton" Grid.Column="3" Content="Enable VR" HorizontalAlignment="Left" Margin="0,275,0,0" VerticalAlignment="Top" Height="70" Width="169" RenderTransformOrigin="0.497,0.572" Click="VREnableButton_Click"/>
        <Button x:Name="VRDisableButton" Grid.Column="3" Content="Disable VR" HorizontalAlignment="Left" Margin="200,275,0,0" VerticalAlignment="Top" Height="70" Width="168" IsEnabled="False"/>
    </Grid>
</Window>
